@page "/"

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<TelerikButton Primary="true" OnClick="HandelClick">Say Hello</TelerikButton>
<br />
<div>
    @helloString;
</div>

@code{
    MarkupString helloString;
    private void HandelClick()
    {
        string msg = $"Hello from <strong>Telerik Blazor</strong> at {DateTime.Now}.<br /> Now you can use C# to write front-end!";
        helloString = new MarkupString(msg);
    }
}
